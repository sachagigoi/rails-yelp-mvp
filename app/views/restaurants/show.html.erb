<div class="card m-3 p-3">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <p class="badge text-black text-start m-0"><%= @restaurant.phone_number %></p>
  <p class="badge text-black text-start m-0"><%= @restaurant.category %></p>
</div>
<div class="card m-3 p-3 d-flex flex-row">
  <div class="container">
    <h2>Latest reviews</h2>
    <% @restaurant.reviews.each do |review| %>
    <div class="card m-3 p-3">
      <h5><%= review.rating %>/5</h5>
      <p><%= review.content %></p>
    </div>
    <% end %>
  </div>
  <div class="card m-3 p-3">
    <h5>Share your review</h5>
    <%= simple_form_for([@restaurant,@review]) do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit review", class: "btn btn-dark" %>
  <% end %>
  </div>
</div>
